<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants" 
    android:paddingLeft="6dip"
    android:paddingRight="6dip"
    android:paddingTop="8dip"
    android:paddingBottom="7dip">   

    <RelativeLayout 
        android:orientation="horizontal" 
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/more_listitem_flag"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dip"
            android:contentDescription="@+id/app_name"
            android:src="@drawable/widget_today_icon" />
        
	    <TextView
	        android:id="@+id/more_listitem_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="40dip"
	        android:singleLine="true"
	        android:textColor="@color/listitem_black"
	        android:textSize="@dimen/text_size_15" />
	     
	    <ImageView
	        android:id="@+id/more_listitem_arrow"
	        android:layout_width="20.0dip"
	        android:layout_height="20.0dip"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="8dip"
	        android:layout_centerVertical="true"
	        android:layout_gravity="center_vertical"
	        android:contentDescription="@+id/app_name"
	        android:src="@drawable/widget_today_icon" />
	    
   	</RelativeLayout>


</LinearLayout> 
